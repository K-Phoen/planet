#!/usr/bin/env bash

rm -rf /tmp/planet
mv _site /tmp/planet

git fetch origin
git checkout gh-pages
git clean -fdx
git rm -r .

cp -R /tmp/planet/* .

find * -type f -exec chmod 644 "{}" ";"
find * -type d -exec chmod 755 "{}" ";"

git add -A .
git commit -m "Update on: `date`"
git push origin gh-pages
